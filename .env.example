# Live Trading API Environment Variables

# Database Configuration (Required)
# Get this from your Neon PostgreSQL dashboard
LIVE_TRADING_DATABASE_CONNECTION_STRING=postgres://user:password@host/database?sslmode=require

# Server Configuration
LIVE_TRADING_SERVER_HOST=0.0.0.0
LIVE_TRADING_SERVER_PORT=8081
LIVE_TRADING_SERVER_MAX_UPLOAD_SIZE=104857600
LIVE_TRADING_SERVER_CORS_ALLOW_ORIGIN=*

# Plugin Configuration
LIVE_TRADING_PLUGIN_DIRECTORY=./plugins
LIVE_TRADING_PLUGIN_MAX_PLUGIN_SIZE=52428800

# Logging Configuration
LIVE_TRADING_LOGGING_LEVEL=info
LIVE_TRADING_LOGGING_FORMAT=json
LIVE_TRADING_LOGGING_OUTPUT_PATH=stdout

# Paradex Exchange Configuration
PARADEX_BASE_URL=https://api.testnet.paradex.trade/v1
PARADEX_WEBSOCKET_URL=wss://ws.api.testnet.paradex.trade/v1
PARADEX_STARKNET_RPC=https://rpc.api.testnet.paradex.trade/
PARADEX_ACCOUNT_ADDRESS=your_starknet_testnet_account_address_here
PARADEX_ETH_PRIVATE_KEY=your_ethereum_private_key_here
PARADEX_L2_PRIVATE_KEY=your_starknet_l2_private_key_here
PARADEX_USE_TESTNET=true
PARADEX_TIMEOUT=30s
